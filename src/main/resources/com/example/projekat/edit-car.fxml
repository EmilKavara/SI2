<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.fxml.FXML?>

<VBox spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" style="-fx-padding: 20;" prefHeight="350" prefWidth="350" fx:controller="com.example.projekat.EditCarController">
        <Label fx:id="editCarLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Edit Car"/>
        <HBox spacing="10">
            <Label text="Naziv:"/>
            <TextField fx:id="nazivTextField"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Model:"/>
            <TextField fx:id="modelTextField"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Godište:"/>
            <TextField fx:id="godisteTextField"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Registracija:"/>
            <TextField fx:id="registracijaTextField"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Kilometraža:"/>
            <TextField fx:id="kilometrazaTextField"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Vrsta Goriva:"/>
            <ComboBox fx:id="vrstaGorivaComboBox"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Dostupno za Kupovinu:"/>
            <CheckBox fx:id="kupovinaCheckBox"/>
        </HBox>
        <HBox spacing="10">
            <Label text="Dostupno za Iznajmljivanje:"/>
            <CheckBox fx:id="iznajmljivanjeCheckBox"/>
        </HBox>
        <HBox spacing="10">
            <Button text="Save" onAction="#saveChanges"/>
            <Button text="Close" onAction="#closeWindow"/>
         </HBox>
</VBox>
